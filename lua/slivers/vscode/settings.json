{
  // [[ Editor Settings ]]
  "editor.fontFamily": "Hack Nerd Font Mono, Menlo, Maple Mono, Monaco, 'Courier New', monospace",
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.iconTheme": "catppuccin-macchiato",
  "workbench.editor.limit.value": 3,
  "workbench.editor.limit.enabled": true,
  "editor.fontSize": 12,
  "editor.tabSize": 2,
  "editor.lineNumbers": "relative",
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.cursorSurroundingLines": 10,
  "editor.minimap.enabled": false,
  "editor.linkedEditing": true,
  "editor.rulers": [80],
  // [[ File Explorer ]]
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": false,
  // [[ Smooth Cursor ]]
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.cursorBlinking": true,
  // [[ Languages ]]
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.defaultFormatter": "JohnnyMorganz.stylua"
  },
  // [[ Custom Theme ]]
  "workbench.colorCustomizations": {
    "editorGroupHeader.tabsBackground": "#1e2030",
    "editorWidget.background": "#1e2030",
    "panel.background": "#1e2030",
    "sideBar.background": "#1e2030",
    "activityBar.background": "#1e2030",
    "activityBar.inactiveForeground": "#cad3f5",
    "statusBar.background": "#1e2030",
    "statusBar.debuggingBackground": "#1e2030",
    "statusBar.noFolderBackground": "#1e2030",
    "tab.border": "#1e2030",
    "tab.inactiveBackground": "#1e2030",
    "terminal.background": "#24273a",
    "terminal.border": "#24273a",
    "titleBar.activeBackground": "#1e2030",
    "titleBar.inactiveBackground": "#1e2030"
  },
  // [[ Custom CSS and JS ]]
  "vscode_custom_css.imports": [
    "file:///Users/joaoinez/.config/nvim/lua/slivers/vscode/custom.css"
  ],
  // [[ Neovim ]]
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // [[ Git ]]
  "diffEditor.codeLens": true,
  // [[ Copilot ]]
  "chat.commandCenter.enabled": false,
  // [[ Telemetry ]]
  "telemetry.telemetryLevel": "off"
}
